const {nanoid} = require('nanoid');
const books = require('./books');

const addBookHandler = (request , h) => {

    const {
        name,
        year,
        author,
        summary,
        publisher,
        pageCount,
        readPage,
        reading,
      } = request.payload;

      const id = nanoid(16);
      const updatedAt = insertedAt;
      const insertedAt = new Date().toISOString();
      let finished; 
    if (pageCount !== readPage) {
        finished = false;
    }
    else {
        finished = true;
    }

    const newBook = {
        id,
        name,
        year,
        author,
        summary,
        publisher,
        pageCount,
        readPage,
        finished,
        reading,
        insertedAt,
        updatedAt
    };

}
